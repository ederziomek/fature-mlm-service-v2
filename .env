# Configurações do Servidor
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Configurações do Banco de Dados MLM (Railway)
DATABASE_URL=${DATABASE_URL}
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Configurações do Banco da Operação (Externo) - usar variáveis de ambiente
EXTERNAL_DB_HOST=${EXTERNAL_DB_HOST}
EXTERNAL_DB_PORT=${EXTERNAL_DB_PORT}
EXTERNAL_DB_USER=${EXTERNAL_DB_USER}
EXTERNAL_DB_PASSWORD=${EXTERNAL_DB_PASSWORD}
EXTERNAL_DB_NAME=${EXTERNAL_DB_NAME}
EXTERNAL_DB_SSL=false

# Configurações do Redis (desabilitado para Railway)
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=
REDIS_DB=

# Configurações do Config Service (Railway) - usar variáveis de ambiente
CONFIG_SERVICE_URL=${CONFIG_SERVICE_URL}
CONFIG_SERVICE_WS_URL=
CONFIG_SERVICE_API_KEY=${CONFIG_SERVICE_API_KEY}

# Configurações de Segurança - usar variáveis de ambiente
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=3600
API_KEY_SECRET=${API_KEY_SECRET}

# Configurações de Cache
CACHE_TTL=1800
CACHE_MAX_SIZE=5000

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=200

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/mlm-service.log

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# URLs de Outros Serviços
COMMISSION_SERVICE_URL=http://localhost:3003
DATA_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005

# Configurações de Jobs
ENABLE_CRON_JOBS=true
CPA_DISTRIBUTION_CRON=*/5 * * * *
HIERARCHY_SYNC_CRON=0 */6 * * *

